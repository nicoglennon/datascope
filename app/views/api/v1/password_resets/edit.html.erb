<div class="signin wrapper">
  <div class="signin center" id="signinFadeIn">
    <div class="signin telescope-div">
      <a href="/" class="signin telescope-name">
        <%= image_tag("percent-circle.svg", class: "navbar-telescope-logo", :alt => "logo") %>
        <span class="signin telescope-letters">Percent</span>
      </a>
    </div>
    <div class="signin form-div">
      <h1 class="signin signin-title">Reset Password</h1>
      <% if @message %>
        <div>
          <p><%= @message %></p>
          <p><a class="password-reset-link" href="/login">Back</a></p>
        </div>
      <% else %>
        <%= form_for @user, :url => api_v1_password_reset_path(@token), :html => {:method => :put} do |f| %>
          <% if @user.errors.any? %>
            <ul class="signin errors">
              <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          <% end %>
          <div class="signin-form-group">
            <%= f.label 'Email', nil, class: 'signin form-label' %>
            <%= f.text_field :email_or_username, value: @user.email, class: 'signin form-control em', disabled: true %>
          </div>

          <div class="signin-form-group">
            <%= f.label :password, "New Password", class: 'signin form-label' %>
            <%= f.password_field :password, class: 'signin form-control pw', required: true %>
          </div>

          <div class="signin-form-group">
            <%= f.label :password_confirmation, nil, class: 'signin form-label' %><br />
            <%= f.password_field :password_confirmation, class: 'signin form-control pw' %>
          </div>
          <%= f.submit "Reset Password", class: 'signin btn' %>

        <% end %>
      <% end %>

    </div>
  </div>
</div>
<script>
  $(document).ready(() => {
    $('#signinFadeIn').addClass('fadeInSigninPage');
  })
</script>
