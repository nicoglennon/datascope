<div class="signup wrapper">
  <div class="signup center" id="signupFadeIn">
    <div class="signup telescope-div">
      <a href="/" class="signup telescope-name">
       <%= image_tag("percent-circle.svg", class: "navbar-telescope-logo", :alt => "logo") %>
        <span class="signup telescope-letters">Percent</span>
      </a>
      
    </div>
    <div class="signup form-div">
      <h1 class="signup signup-title">Sign Up</h1>

      <%= form_for(@user, as: :user, url: register_path) do |f| %>
      <% if @errors %>
        <ul class="signup errors">
          <% @errors.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      <% end %>
        <div class="signup-form-group">
          <%= f.label 'Email', class: 'signup form-label' %>
          <%= f.email_field :email, class: 'signup form-control em', required: true %>
        </div>

        <div class="signup-form-group">
          <%= f.label 'Username', class: 'signup form-label' %>
          <%= f.text_field :username, class: 'signup form-control un', required: true %>
        </div>

        <div class="signup-form-group">
          <%= f.label 'Password', class: 'signup form-label' %>
          <%= f.password_field :password, class: 'signup form-control pw', required: true %>
        </div>

        <div class="signup-form-group">
          <%= f.label 'Confirm password', class: 'signup form-label' %>
          <%= f.password_field :password_confirmation, class: 'signup form-control cpw', required: true %>
        </div>

        <%= f.submit 'Sign Up', class: 'signup btn' %>
      <% end %>

    </div>
    <p class="signup already-member">Already on Percent? <a href="/login" class="signup already-member-link">Sign in</a>.</p>
  </div>
</div>
<script>
  $(document).ready(() => {
    $('#signupFadeIn').addClass('fadeInSignupPage');
  })
</script>
