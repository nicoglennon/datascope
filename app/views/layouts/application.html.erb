<!DOCTYPE html>
<html>
  <head>
    <title>Telescope</title>
    <%= csrf_meta_tags %>

    <!-- <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %> -->
    <!-- <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %> -->
    <%= favicon_link_tag asset_path('telescope-favicon.png'), :rel => 'icon', :type =>  'image/png' %>

    <% if logged_in? %>
      <%= javascript_pack_tag 'telescope/index' %>
      <%= stylesheet_pack_tag 'telescope/assets/stylesheets/normalize-app' %>
      <%= stylesheet_pack_tag 'telescope/assets/stylesheets/app' %>
      <%= stylesheet_pack_tag 'telescope/assets/stylesheets/notifications' %>
    <% else %>
      <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <% end %>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Karla" rel="stylesheet">
  </head>

  <body>
    <%= yield %>
    <% if logged_in? %>
      <%= current_user.username %>
      <%= button_to "Logout", logout_path, :method => "delete", data: { confirm: 'Are you sure?' } %>
    <% end %>
  </body>
</html>
