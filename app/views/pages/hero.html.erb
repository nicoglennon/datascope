</div>
<script>
  var percentage = 33;
  document.getElementById('startchecked').checked = true;

  $(document).ready(() => {
     setTimeout(function(){
       $('#heroPageImage').addClass('fadeInHeroPageImage');
     }, 200);

     $('.goalLineCheck').click(function(event){
       if(event.target.checked){
         percentage += (1/3)*100;
       } else {
         percentage -= (1/3)*100;
       }
       $('#progressbar').attr('value',percentage);
       $('.float-number').html(Math.round(percentage) + '%');
     })
   })
</script>
